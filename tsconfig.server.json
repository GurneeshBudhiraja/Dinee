{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src/app/ws-server",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitAny": false
  },
  "include": [
    "src/app/ws-server/**/*",
    "src/app/ws-server/tools.ts",
    "src/app/ws-server/server-constants.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
